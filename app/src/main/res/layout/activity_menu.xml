<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCC33"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="99dp"
        android:text="Game of Fifteen Puzzle"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp" />
    <View
        android:id="@+id/view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="199dp"
        android:background="#FFFFFF" />
    <RelativeLayout
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button1"
            style="@style/ButtonStyle"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:tag="00"
            android:text="A"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_color"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            style="@style/ButtonStyle"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/button1"
            android:layout_toRightOf="@id/button1"
            android:textColor="@color/black"
            android:tag="01"
            android:text="B"
            android:background="@drawable/button_color"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            style="@style/ButtonStyle"
            android:layout_toEndOf="@id/button2"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:tag="02"
            android:text="C"
            android:background="@drawable/button_color"
            android:layout_toRightOf="@id/button2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button4"
            style="@style/ButtonStyle"
            android:layout_toEndOf="@id/button3"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:tag="03"
            android:text="D"
            android:background="@drawable/button_color"
            android:layout_toRightOf="@id/button3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button5"
            style="@style/ButtonStyle"
            android:layout_below="@id/button1"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:tag="10"
            android:text="E"
            android:background="@drawable/button_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button6"
            style="@style/ButtonStyle"
            android:layout_below="@id/button2"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/button1"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/button5"
            android:tag="11"
            android:text="F"
            android:background="@drawable/button_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button7"
            style="@style/ButtonStyle"
            android:layout_below="@id/button3"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/button2"
            android:layout_toRightOf="@id/button6"
            android:textColor="@color/black"
            android:tag="12"
            android:text="G"
            android:background="@drawable/button_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button8"
            style="@style/ButtonStyle"
            android:layout_below="@id/button4"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/button3"
            android:layout_toRightOf="@id/button7"
            android:textColor="@color/black"
            android:tag="13"
            android:text="H"
            android:background="@drawable/button_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button9"
            style="@style/ButtonStyle"
            android:layout_below="@id/button5"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:tag="20"
            android:text="I"
            android:background="@drawable/button_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button10"
            style="@style/ButtonStyle"
            android:layout_below="@id/button6"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/button9"
            android:layout_toRightOf="@id/button9"
            android:textColor="@color/black"
            android:tag="21"
            android:text="J"
            android:background="@drawable/button_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button11"
            style="@style/ButtonStyle"
            android:layout_below="@id/button7"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/button10"
            android:layout_toRightOf="@id/button10"
            android:tag="22"
            android:text="K"
            android:background="@drawable/button_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button12"
            style="@style/ButtonStyle"
            android:layout_below="@id/button8"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/button11"
            android:layout_toRightOf="@id/button11"
            android:tag="23"
            android:text="L"
            android:background="@drawable/button_color" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button13"
            style="@style/ButtonStyle"
            android:layout_alignParentStart="true"
            android:layout_below="@id/button9"
            android:tag="30"
            android:text="M"
            android:textColor="@color/black"
            android:background="@drawable/button_color"
            android:layout_alignParentLeft="true" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button14"
            style="@style/ButtonStyle"
            android:layout_toEndOf="@id/button13"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/button10"
            android:tag="31"
            android:text="N"
            android:textColor="@color/black"
            android:background="@drawable/button_color"
            android:layout_toRightOf="@id/button13" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button15"
            style="@style/ButtonStyle"
            android:layout_toEndOf="@id/button14"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/button11"
            android:tag="32"
            android:textColor="@color/black"
            android:text="O"
            android:background="@drawable/button_color"
            android:layout_toRightOf="@id/button14" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button16"
            style="@style/ButtonStyle"
            android:layout_below="@id/button12"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/button15"
            android:layout_toRightOf="@id/button15"
            android:background="@drawable/buttoncolor"
            android:tag="33"
            android:textColor="@color/black"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>

</FrameLayout>
